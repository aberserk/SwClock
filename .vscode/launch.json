{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug SwClock GTests",
      "type": "lldb",
      "request": "launch",
      "program": "${command:cmake.buildDirectory}/swclock_gtests",
      "args": [],
      "cwd": "${command:cmake.buildDirectory}",
      "terminal": "integrated",
      "preLaunchTask": "Build GTests",
      "initCommands": [
        "settings set target.disable-aslr false"
      ]
    },
    {
      "name": "Debug SwClock GTests (with filter)",
      "type": "lldb",
      "request": "launch",
      "program": "${command:cmake.buildDirectory}/swclock_gtests",
      "args": ["--gtest_filter=${input:testFilter}"],
      "cwd": "${command:cmake.buildDirectory}",
      "terminal": "integrated",
      "preLaunchTask": "Build GTests",
      "initCommands": [
        "settings set target.disable-aslr false"
      ]
    }
  ],
  "inputs": [
    {
      "id": "testFilter",
      "description": "GTest filter pattern",
      "default": "*",
      "type": "promptString"
    }
  ]
}
