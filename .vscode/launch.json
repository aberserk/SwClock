{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug SwClock GTests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/gtests-macos/swclock_gtests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "Build GTests",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for lldb",
                    "text": "settings set target.disable-aslr false",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug SwClock GTests (with filter)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/gtests-macos/swclock_gtests",
            "args": ["--gtest_filter=${input:testFilter}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "Build GTests",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for lldb",
                    "text": "settings set target.disable-aslr false",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "CMake Debug Current Target",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        }
    ],
    "inputs": [
        {
            "id": "testFilter",
            "description": "GTest filter pattern",
            "default": "*",
            "type": "promptString"
        }
    ]
}