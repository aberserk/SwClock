{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G", "Ninja",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}/build/build-debug-macos"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Configure Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G", "Ninja",
                "-DCMAKE_BUILD_TYPE=Release",
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}/build/build-release-macos"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Configure GTests",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G", "Ninja",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}/build/build-gtests-macos"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "ninja",
            "args": [
                "-C", "${workspaceFolder}/build/build-debug-macos"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Configure Debug",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "ninja",
            "args": [
                "-C", "${workspaceFolder}/build/build-release-macos"
            ],
            "group": "build",
            "dependsOn": "Configure Release",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build GTests",
            "type": "shell",
            "command": "ninja",
            "args": [
                "-C", "${workspaceFolder}/build/build-gtests-macos",
                "swclock_gtests"
            ],
            "group": "build",
            "dependsOn": "Configure GTests",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/build/build-gtests-macos/swclock_gtests",
            "group": "test",
            "dependsOn": "Build GTests",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run Python Analysis",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/tools/plot_kf_wifi_perf.py",
                "--help"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Clean Debug",
            "type": "shell",
            "command": "ninja",
            "args": [
                "-C", "${workspaceFolder}/build/build-debug-macos",
                "clean"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Clean Release",
            "type": "shell",
            "command": "ninja",
            "args": [
                "-C", "${workspaceFolder}/build/build-release-macos",
                "clean"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Clean GTests",
            "type": "shell",
            "command": "ninja",
            "args": [
                "-C", "${workspaceFolder}/build/build-gtests-macos",
                "clean"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Clean All",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/build"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}