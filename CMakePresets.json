{
  "version": 3,
  "configurePresets": [
    {
      "name": "base-macos",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "debug-macos",
      "inherits": "base-macos",
      "displayName": "Configure macOS Debug",
      "binaryDir": "${sourceDir}/build/ninja-debug-macos",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release-macos",
      "inherits": "base-macos",
      "displayName": "Configure macOS Release",
      "binaryDir": "${sourceDir}/build/ninja-release-macos",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "gtests-macos",
      "inherits": "base-macos",
      "displayName": "Configure macOS GTests",
      "binaryDir": "${sourceDir}/build/ninja-gtests-macos",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTING": "ON",
        "ENABLE_GTESTS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-debug",
      "displayName": "Build macOS Debug",
      "configurePreset": "debug-macos",
      "jobs": 8
    },
    {
      "name": "build-release",
      "displayName": "Build macOS Release",
      "configurePreset": "release-macos",
      "jobs": 8
    },
    {
      "name": "build-gtests",
      "displayName": "Build macOS GTests",
      "configurePreset": "gtests-macos",
      "targets": ["swclock_gtests"],
      "jobs": 8
    }
  ],
  "testPresets": [
    {
      "name": "gtests",
      "displayName": "Run Google Tests",
      "configurePreset": "gtests-macos",
      "output": { "outputOnFailure": true },
      "execution": { "jobs": 4, "stopOnFailure": false }
    }
  ]
}
